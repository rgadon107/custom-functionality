{
	"name": "rgadon107/custom-functionality",
	"description": "A WordPress plugin boilerplate that emphasizes code quality.",
	"type": "wordpress-plugin",
	"license": "GPL-2.0-or-later",
	"homepage": "https://github.com/rgadon107/custom-functionality",
	"support": {
		"issues": "https://github.com/rgadon107/custom-functionality/issues",
		"source": "https://github.com/rgadon107/custom-functionality"
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"autoload": {
		"exclude-from-classmap": [
			"/tests/"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"rgadon107\\CustomFunctionalityPlugin\\Tests\\PHP\\": "tests/phpunit/",
			"rgadon107\\CustomFunctionalityPlugin\\Tests\\PHP\\Unit\\": "tests/phpunit/unit/",
			"rgadon107\\CustomFunctionalityPlugin\\Tests\\PHP\\Integration\\": "tests/phpunit/integration/"
		}
	},
	"require": {
		"php": "^7.4|^8.3",
		"composer/installers": "^v2.3.0"
	},
	"require-dev": {
	  	"php": "^7.4|^8.3",
		"brain/monkey": "^2.6",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.2",
		"phpunit/phpunit": "^11.3.3",
		"roave/security-advisories": "dev-master",
		"sirbrillig/phpcs-variable-analysis": "^v3.0.0-beta.8",
		"squizlabs/php_codesniffer": "^4.0.0",
		"phpcompatibility/php-compatibility": "^9.3.5",
		"wp-coding-standards/wpcs": "^3.3.0"
	},
	"config": {
		"sort-order": true
	},
	"scripts": {
		"install-codestandards": [
			"Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run"
		],
		"phpcs-src": "\"vendor/bin/phpcs\" src/",
		"phpcs-tests": "\"vendor/bin/phpcs\" tests/phpunit/",
		"run-phpcs": [
			"@phpcs-src",
			"@phpcs-tests"
		],
		"test-unit": "\"vendor/bin/phpunit\" --testsuite unit --color=always",
		"test-integration": "\"vendor/bin/phpunit\" --testsuite integration --configuration tests/phpunit/integration/phpunit.xml.dist --color=always",
		"run-tests": [
			"@test-unit",
			"@test-integration"
		]
	}
}
